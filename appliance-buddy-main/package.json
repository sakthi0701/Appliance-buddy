{
  "name": "appliance-buddy",
  "version": "1.0.0",
  "description": "A comprehensive appliance management system with Supabase integration",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "install:all": "npm run install:frontend && npm run install:backend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "start": "cd backend && npm start",
    "start:prod": "npm run build && npm run start",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "env:check": "echo 'Checking environment variables:' && echo 'VITE_SUPABASE_URL:' $VITE_SUPABASE_URL && echo 'VITE_SUPABASE_ANON_KEY:' ${VITE_SUPABASE_ANON_KEY:0:20}..."
  },
  "keywords": [
    "appliance",
    "management",
    "supabase",
    "react",
    "typescript",
    "maintenance",
    "warranty"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "turbo": "^1.10.12"
  }
}